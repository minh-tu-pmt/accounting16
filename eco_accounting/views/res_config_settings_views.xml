<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_act_account" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.act.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div data-key="account" position="inside">

                <h2>Act ACCOUNT</h2>
                <div class="row mt16 o_settings_container">
                    
                    <div class="col-6 col-lg-6 o_setting_box">
                        <p><b>Cập nhật dữ liệu</b></p>
                        <button
                                name="action_merge_account"
                                string="Cập nhật kế toán"
                                type="object"
                                class="oe_highlight"
                            />
                    </div>

                </div>
            </div>
        </field>
    </record>
</odoo>
